<div class="container">
  <h1>Founded pets</h1>

  <ul>
    <% @pets.each do |pet| %>
      <li>
        <%= link_to pet.name, pet_path(pet) %> |
        <%= link_to "Delete",
                    pet_path(pet),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>


  <%= link_to "Add a pet", new_pet_path %>
</div>
